<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.imber.spotifystreamer.PlayerFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/player_artist_textview"
        android:layout_weight="1"
        tools:text="Coldplay"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/player_album_textview"
        android:layout_weight="1"
        tools:text="Ghost Stories"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/player_album_imageview"
        android:layout_weight="10"
        tools:src="@mipmap/ic_launcher"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/player_track_textview"
        android:layout_weight="1"
        tools:text="A Sky Full of Stars"/>
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/player_seek_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/player_progress_textview"
            android:layout_weight="1"
            tools:text="0:00"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/player_end_textview"
            tools:text="1:29"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/player_prev_button"
            android:background="@android:drawable/ic_media_previous"
            android:layout_alignTop="@+id/player_play_button"
            android:layout_toLeftOf="@+id/player_play_button"
            android:layout_marginRight="60dp"/>
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/player_play_button"
            android:background="@android:drawable/ic_media_play"
            android:layout_centerHorizontal="true"/>
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/player_next_button"
            android:background="@android:drawable/ic_media_next"
            android:layout_gravity="end|center_vertical"
            android:layout_alignTop="@id/player_play_button"
            android:layout_toRightOf="@id/player_play_button"
            android:layout_marginLeft="60dp"/>
    </RelativeLayout>


</LinearLayout>
